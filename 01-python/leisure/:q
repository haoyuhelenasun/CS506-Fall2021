def draw_market():
    print("market:")
    print("1 | fruits and vegetables |")
    print("2 | dairy                 |")
    print("3 | bakery                |")
    print("4 | meat                  |")
    print("5 | deli                  |")
    
    print('\n')
    print("fruites and vegetables:")
    print("---------------------------------")
    print("| apples  | bananas  | oranges  |")
    print("---------------------------------")
    print("| avocado | peaches  | tomatoes |")
    print("---------------------------------")
    print("| lettuce | potatoes |    ...   |")
    print("---------------------------------")

    print('\n')
    print("dairy:")
    print("---------------------------------")
    print("| milk    | yogurt   | cheese   |")
    print("---------------------------------")
    print("| butter  | ice-cream|    ...   |")
    print("---------------------------------")

    print('\n')
    print("bakery:")
    print("---------------------------------")
    print("| bread   |  bagels  | cookies  |")
    print("---------------------------------")
    print("| muffins |  pizza   |    ...   |")
    print("---------------------------------")

    print('\n')
    print("meat:")
    print("---------------------------------")
    print("| pork    |  lamb    |    beef  |")
    print("---------------------------------")
    print("| chicken |  turkey  |    ...   |")
    print("---------------------------------")

    print('\n')
    print("deli:")
    print("---------------------------------")
    print("| salas  |sliced meat| sandwich |")
    print("---------------------------------")
    print("|pepperoni|  rolls   |    ...   |")
    print("---------------------------------")

